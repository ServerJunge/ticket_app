<!DOCTYPE html>
<html>
<head>
  <title>Welcome to Ticket System</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <nav class="navbar navbar-default">
    <div class="navbar-header">
      <%= link_to 'Ticket System', root_path, class: 'navbar-brand' %>
    </div>

      <div class="pull-right right-buttons">
        <%= link_to 'Create Account', new_account_path, class: 'btn btn-success navbar-btn' %>
      </div>
      <ul class="nav navbar-nav navbar">                            
        <li><%= link_to 'New Ticket', new_ticket_path %></li>
        <li><%= link_to 'Users', users_path %></li>
      </ul>

  </nav>
</header>

<div class="container">
  <%= flash_messages if show_layout_flash? %>

  <div class="row">
    <%= yield %>
  </div>
</div>

</body>
</html>
