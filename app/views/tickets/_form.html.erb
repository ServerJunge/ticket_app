<%= simple_form_for(@ticket,
                    wrapper_mappings: { boolean: :vertical_boolean }) do |f| %>

  <%= f.input :name %>
  <%= f.input :client %>

  <% if @ticket.persisted? %>
    <%= f.input :archived, as: :boolean %>
  <% end %>

  <%= f.button :submit, class: 'btn-primary' %>
<% end %>
