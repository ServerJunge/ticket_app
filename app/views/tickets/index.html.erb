<div class="col-md-12">


<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>Titel</th>
      <th>Client</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

<% @tickets.each do |ticket| %>

      <tr>
        <td><%= ticket.id %></td>
        <td><%= ticket.name %></td>
        <td><%= ticket.client %></td>
        <td>
          <%= link_to 'Edit', edit_ticket_path(ticket), class: "label label-primary" %>
          <%= link_to 'Close', edit_ticket_path(ticket), class: "label label-success" %>
          <%= link_to 'Delete', edit_ticket_path(ticket), class: "label label-danger" %>
        </td>
      </tr>

<% end %>

</tbody>
</table>
</div>
